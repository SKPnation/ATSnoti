<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
            android:id="@+id/etName"
            android:hint="Name"
            android:text=""
            android:textColorHint="@color/colorHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:inputType="text"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#000"
            app:met_singleLineEllipsis="true"/>

            <EditText
            android:id="@+id/etAge"
            android:hint="Age"
            android:text=""
            android:textColorHint="@color/colorHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:inputType="number"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#000"
            app:met_singleLineEllipsis="true"/>

            <EditText
            android:id="@+id/etGrade"
            android:hint="Grade"
            android:text=""
            android:textColorHint="@color/colorHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:inputType="text"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#000"
            app:met_singleLineEllipsis="true"/>

            <EditText
            android:id="@+id/etHomeAddress"
            android:hint="Home address"
            android:text=""
            android:textColorHint="@color/colorHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:inputType="text"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#000"
            app:met_singleLineEllipsis="true"/>

            <EditText
            android:id="@+id/etPhone"
            android:hint="Phone number"
            android:text=""
            android:textColorHint="@color/colorHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:inputType="number"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#000"
            app:met_singleLineEllipsis="true"/>

            <EditText
            android:id="@+id/etGuardianName"
            android:hint="Guardian name"
            android:text=""
            android:textColorHint="@color/colorHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:inputType="text"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#000"
            app:met_singleLineEllipsis="true"/>

            <EditText
            android:id="@+id/etGuardianEmail"
            android:hint="Guardian email"
            android:text=""
            android:textColorHint="@color/colorHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:inputType="textEmailAddress"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#000"
            app:met_singleLineEllipsis="true"/>

            <EditText
            android:id="@+id/etOfficeAddress"
            android:hint="Office Address"
            android:text=""
            android:textColorHint="@color/colorHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:inputType="textPostalAddress"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#000"
            app:met_singleLineEllipsis="true"/>

            <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSelect"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#aaa"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="SELECT"/>

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="#aaa"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:text="UPLOAD"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>