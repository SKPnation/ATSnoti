<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pupil_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image" />

        <LinearLayout
            android:id="@+id/pupil_name_grade_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pupil_image"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pupil_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Name"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pupil_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="grade"
                    android:textColor="#000"
                    android:textStyle="italic" />

            </LinearLayout>

            <ImageView
                android:id="@+id/cart_item_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_notify"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/pupil_name_grade_age"
            android:layout_centerHorizontal="true"
            android:text="Notify"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/btn_notify"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDetails"
                android:layout_weight="1"
                android:background="#fff"
                android:text="DETAILS"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>